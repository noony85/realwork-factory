@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using realwork.Localization

<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 애플리케이션</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: #f5f7fa;
            font-family: Segoe UI, "Noto Sans KR", sans-serif;
            margin: 0;
        }

        .auth-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 2rem;
        }

        .auth-card {
            width: 100%;
            max-width: 420px;
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 6px 18px rgba(0,0,0,.08);
        }

        .auth-header {
            margin-bottom: 1rem;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-control {
            width: 100%;
            padding: .5rem .75rem;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .btn {
            padding: .5rem 1rem;
            background: #0078d4;
            color: #fff;
            border: 0;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-card">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>